RewriteEngine On

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html to clean URL
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R=301]

# Handle specific pages
RewriteRule ^website-automation-1/?$ website-automation-1.html [NC,L]
RewriteRule ^seo-leads-1/?$ seo-leads-1.html [NC,L]
RewriteRule ^facebook-ads-landing/?$ facebook-ads-landing.html [NC,L]
RewriteRule ^sales-page/?$ sales-page.html [NC,L]